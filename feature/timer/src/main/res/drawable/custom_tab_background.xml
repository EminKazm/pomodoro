<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#C51212"/> <!-- Tomato color for selected state -->
            <corners android:radius="0dp"/> <!-- Adjust the radius as needed -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFAFA"/> <!-- Light background color for default state -->
            <corners android:radius="0dp"/> <!-- Adjust the radius as needed -->
        </shape>
    </item>
</selector>
