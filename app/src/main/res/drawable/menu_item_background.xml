<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- The color when selected -->
            <corners android:radius="0dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Unselected state -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- No background when unselected -->
        </shape>
    </item>
</selector>
