<!-- res/drawable/bottom_nav_item_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Transparent Layer (for unselected areas) -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <!-- Underline Layer -->
            <item android:bottom="0dp">
                <shape android:shape="rectangle">
                    <size android:height="0dp" />
                    <corners android:radius="32dp" /><!-- Set the thickness of the underline -->
                    <solid android:color="@color/colorButtonBackground" /> <!-- Underline color -->
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Default (unselected) state -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>
